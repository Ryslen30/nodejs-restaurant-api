<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kitchen Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>üçΩÔ∏è Kitchen Dashboard</h1>
    <p>List of confirmed orders</p>
  </header>

  <main>
    <% if (orders && orders.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Order #</th>
            <th>Table</th>
            <th>Waiter</th>
            <th>Items</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order.id %></td>
              <td><%= order.table.number %></td>
              <td><%= order.waiter.name %></td>
              <td>
                <ul>
                  <% order.items.forEach(item => { %>
                    <li><%= item.productName %> √ó <%= item.quantity %></li>
                  <% }) %>
                </ul>
              </td>
              <td><%= order.status %></td>
              <td>
                <% if (order.status === "confirmed") { %>
                  <form action="/kitchen/prepare/<%= order.id %>" method="POST">
                    <button type="submit" class="btn-prepare">Start Preparing</button>
                  </form>
                <% } else if (order.status === "preparing") { %>
                  <form action="/kitchen/complete/<%= order.id %>" method="POST">
                    <button type="submit" class="btn-complete">Mark as Ready</button>
                  </form>
                <% } else { %>
                  <span class="status-ready">‚úÖ Ready</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No confirmed orders yet üç≤</p>
    <% } %>
  </main>
</body>
</html>
