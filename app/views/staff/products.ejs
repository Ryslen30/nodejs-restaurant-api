            <div class="dashboard-card">
                <h2>Product Management (<%= products.length %> Total)</h2>

                <div class="table-actions">
                    <button id="showAddProductModal" class="add-product-btn">
                        + Add New Product
                    </button>
                </div>

                <div style="overflow-x: auto;">
