    <script>
        // --- Element Selection & Message Helper (Omitted for brevity, assume similar to previous response) ---
        const addProductModal = document.getElementById("addProductModal");
        const showAddProductBtn = document.getElementById("showAddProductModal");
        const addCloseBtn = document.querySelector(".add-close-btn");
        const addProductForm = document.getElementById("addProductForm");

        const editProductModal = document.getElementById("editProductModal");
        const editCloseBtn = document.querySelector(".edit-close-btn");
        const editProductForm = document.getElementById("editProductForm");
        const mainContent = document.querySelector(".main-content");

        // Basic showMessage function (defined earlier)
        function showMessage(type, text) {
            document.querySelectorAll('.success-message, .error-message').forEach(el => el.remove());
            const msgDiv = document.createElement('div');
            msgDiv.className = type === 'success' ? 'success-message' : 'error-message';
            msgDiv.innerHTML = `${type === 'success' ? '‚úì' : '‚úó'} <strong>${text}</strong>`;
            mainContent.prepend(msgDiv);
            setTimeout(() => { msgDiv.style.opacity = '0'; setTimeout(() => msgDiv.remove(), 500); }, 3000);
        }
        
        // --- Modal Control Functions ---
        showAddProductBtn.onclick = function (event) {
            event.preventDefault();
            addProductModal.style.display = "block";
            addProductForm.reset();
            // Default status
            document.getElementById('isAvailable').value = 'true'; 
            document.getElementById('isBox').checked = false; 
        }

        addCloseBtn.onclick = function () { addProductModal.style.display = "none"; }
        editCloseBtn.onclick = function () { editProductModal.style.display = "none"; }
        
        window.onclick = function (event) {
            if (event.target === addProductModal) { addProductModal.style.display = "none"; }
            if (event.target === editProductModal) { editProductModal.style.display = "none"; }
        }

        /**
         * Populates and opens the Edit Product modal.
         */
        function openEditModal(button) {
            const productData = JSON.parse(button.getAttribute('data-product'));

            document.getElementById('edit-id').value = productData._id;
            document.getElementById('edit-product-name-title').textContent = productData.name;
            document.getElementById('edit-name').value = productData.name;
            document.getElementById('edit-description').value = productData.description || '';
            document.getElementById('edit-price').value = productData.price;
            document.getElementById('edit-imageUrl').value = productData.imageUrl || '';
            
            // Set Category ID
            const categoryId = (productData.category && productData.category._id) 
                ? productData.category._id 
                : productData.category; // Handles both populated and unpopulated category
                
            document.getElementById('edit-category').value = categoryId;
            
            // Set Checkbox (isBox)
            document.getElementById('edit-isBox').checked = productData.isBox;

            // Set Availability Status
            document.getElementById('edit-isAvailable').value = String(productData.isAvailable);

            editProductModal.style.display = "block";
        }
        window.openEditModal = openEditModal; 

        // --- AJAX Form Submission: Add Product (POST) ---
        addProductForm.addEventListener('submit', async function (e) {
            e.preventDefault();

            const formData = new FormData(this);
            const data = Object.fromEntries(formData.entries());
            
            // Convert 'isAvailable' string to boolean
            data.isAvailable = data.isAvailable === 'true';
            // Checkbox handling: If checked, FormData gives 'true'. If unchecked, it's missing.
            data.isBox = data.isBox === 'true'; 
            // Convert price to number
            data.price = parseFloat(data.price);
            
            // Handle optional fields that might be empty
            if (data.description === '') delete data.description;
            if (data.imageUrl === '') delete data.imageUrl;

            try {
                const response = await fetch('/api/staff/products', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const responseData = await response.json();

                if (response.ok) {
                    addProductModal.style.display = "none";
                    showMessage('success', 'New product created successfully! Refreshing page...');
                    await new Promise(resolve => setTimeout(resolve, 50)); 
                    setTimeout(() => { window.location.reload(); }, 1500);

                } else {
                    showMessage('error', `Error creating product: ${responseData.message || 'Unknown error'}`);
                }
            } catch (error) {
                console.error('Submission failed:', error);
                showMessage('error', 'A network error occurred while creating the product.');
            }
        });

        // --- AJAX Form Submission: Edit Product (PUT) ---
        editProductForm.addEventListener('submit', async function (e) {
            e.preventDefault();

            const formData = new FormData(this);
            const data = Object.fromEntries(formData.entries());

            const productId = data.id;
            delete data.id; 

            // Prepare updates payload, converting types
            const updates = { 
                name: data.name,
                description: data.description || '', // Set to empty string if missing
                price: parseFloat(data.price),
                category: data.category,
                imageUrl: data.imageUrl || '', // Set to empty string if missing
                isBox: data.isBox === 'true', // Checkbox handling
                isAvailable: data.isAvailable === 'true'
            };

            try {
                const response = await fetch(`/api/staff/products/${productId}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(updates)
                });

                if (response.ok) {
                    editProductModal.style.display = "none";
                    showMessage('success', `Product ${updates.name} updated successfully! Refreshing page...`);
                    await new Promise(resolve => setTimeout(resolve, 50)); 
                    setTimeout(() => { window.location.reload(); }, 1500);

                } else {
                    let errorData;
                    try {
                        errorData = await response.json();
                    } catch (e) {
                        showMessage('error', `Update failed (${response.status}). Server returned an unexpected page.`);
                        return;
                    }
                    showMessage('error', `Error updating product: ${errorData.message || 'Unknown error'}`);
                }
