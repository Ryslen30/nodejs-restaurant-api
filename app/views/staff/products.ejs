            <form id="editProductForm">
                <input type="hidden" id="edit-id" name="id">

                <div class="form-group">
                    <label for="edit-name">Product Name (Required)</label>
                    <input type="text" id="edit-name" name="name" required maxlength="50">
                </div>

                <div class="form-group">
                    <label for="edit-description">Description (Optional)</label>
                    <textarea id="edit-description" name="description" rows="3" maxlength="200"></textarea>
                </div>

                <div class="form-group">
                    <label for="edit-price">Price (Required)</label>
                    <input type="number" id="edit-price" name="price" required min="0.01" step="0.01">
                </div>
                
                <div class="form-group">
                    <label for="edit-category">Category (Required)</label>
                    <select id="edit-category" name="category" required>
                        <option value="">-- Select a Category --</option>
